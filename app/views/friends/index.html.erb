<h1>Listing friends</h1>

<table class = "table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.name %></td>
    <td><%= friend.email %></td>
    <td><%= friend.user_id %></td>
    <td><%= link_to 'Show', friend, :class => 'btn btn-mini btn-success' %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend), :class =>'btn btn-mini btn-warning' %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Friend', new_friend_path, :class =>'btn btn-mini btn-primary'%>
